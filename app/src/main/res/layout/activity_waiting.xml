<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C83D8">

    <ImageView
        android:id="@+id/ani_waiting"
        android:layout_width="422dp"
        android:layout_height="185dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/ic_waiting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:layout_width="61dp"
        android:layout_height="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/ani_waiting"
        app:layout_constraintTop_toTopOf="@+id/ani_waiting"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="70dp"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/ani_waiting" />

    <ImageView
        android:id="@+id/watch_hand_iv"
        android:layout_width="16dp"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="125dp"
        android:src="@drawable/ic_watch_hand"
        app:layout_constraintRight_toRightOf="@+id/ani_waiting"
        app:layout_constraintTop_toTopOf="@+id/ani_waiting" />

    <TextView
        android:id="@+id/default_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="终于等到你，约1分30秒后加入PK吧！"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ani_waiting" />
</androidx.constraintlayout.widget.ConstraintLayout>
